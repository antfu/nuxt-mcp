{
  "type": "module",
  "version": "0.2.4",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "play": "pnpm -C packages/nuxt-mcp play",
    "lint": "eslint",
    "release": "bumpp -r && pnpm -r publish",
    "test": "vitest",
    "test:integration": "node packages/nuxt-mcp/test-integration.ts",
    "inspect": "npx @modelcontextprotocol/inspector",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks && nr -r dev:prepare",
    "docker:build": "docker build -t nuxt-fullstack-mcp .",
    "docker:run": "docker run -p 3000:3000 nuxt-fullstack-mcp",
    "docker:dev": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker system prune -a",
    "start": "NODE_ENV=production node packages/nuxt-mcp/playground/.output/server/index.mjs"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:utils",
    "@modelcontextprotocol/inspector": "catalog:cli",
    "@modelcontextprotocol/sdk": "catalog:prod",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "h3": "catalog:prod",
    "lint-staged": "catalog:cli",
    "nodemon": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing",
    "zod": "catalog:prod"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
